<div id="book-page">
  <a href="/books">Voltar</a>
  <div class="container">
    <h1>{{book.title}}</h1>
    <p>Este Item tem {{book.pageqty}}</p>
    <div class="actions">
      <a href="/books/edit/{{book.id}}" id="button">Editar</a>
      <form action="/books/remove/{{book.id}}" method="POST">
        <input type="submit" value="Remover" id="button" class="button-edit">
      </form>
    </div>
  </div>
</div>